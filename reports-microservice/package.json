{
  "name": "reports-microservice",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "docker:build": "docker build -t reports-microservice .",
    "docker:run": "docker run --env-file ./.env -dti --name reports-microservice-dev -p 4200:4200 reports-microservice",
    "docker:stop": "docker stop reports-microservice-dev && docker rm reports-microservice-dev",
    "docker:logs": "docker logs reports-microservice-dev",
    "docker:exec": "docker exec -it reports-microservice-dev /bin/bash",
    "compose:up:dev": "docker-compose up dev -d",
    "compose:up:prod": "docker-compose up prod -d"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.617.0",
    "@codegenie/serverless-express": "^4.15.0",
    "@nestjs/axios": "^3.0.2",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/microservices": "^10.3.10",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/swagger": "^7.4.0",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.4",
    "aws-lambda": "^1.0.7",
    "dotenv": "^16.4.5",
    "handlebars": "^4.7.8",
    "jsonwebtoken": "^9.0.2",
    "pdf-creator-node": "^2.3.5",
    "puppeteer": "^22.13.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "serverless-express": "^2.0.12"
  },
  "devDependencies": {
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/src/migrations/"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/src/migrations/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 5,
        "functions": 30,
        "lines": 35,
        "statements": 40
      }
    },
    "coverageReporters": [
      "text",
      "cobertura",
      "lcov"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/$1"
    }
  }
}
